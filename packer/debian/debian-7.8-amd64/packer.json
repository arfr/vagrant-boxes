{
    "variables": {
        "vm_name": "debian-7.8-amd64",
        "iso_url": "http://cdimage.debian.org/debian-cd/7.8.0/amd64/iso-cd/debian-7.8.0-amd64-netinst.iso",
        "iso_checksum": "e39c36d6adc0fd86c6edb0e03e22919086c883b37ca194d063b8e3e8f6ff6a3a"
    },
    "builders": [{
        "vm_name": "{{ user `vm_name` }}",
        "type": "virtualbox-iso",
        "guest_os_type": "Debian_64",

        "headless": false,
        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
        "virtualbox_version_file": ".vbox_version",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "512"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ],

        "disk_size": 10240,
        
        "iso_url": "{{ user `iso_url` }}",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_checksum_type": "sha256",

        "http_directory": "http",

        "ssh_password": "password",
        "ssh_username": "root",
        "ssh_wait_timeout": "10000s",

        "boot_command": [
            "<esc><wait>",
            "install auto=true priority=critical preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
            "<enter>"
        ],

        "shutdown_command": "shutdown -h now"
    }],
    "provisioners": [{
        "type": "shell",
        "scripts": [
            "scripts/base.sh",
            "scripts/puppet.sh",
            "scripts/chef.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/grub.sh",
            "scripts/cleanup.sh",
            "scripts/zerodisk.sh"
        ]
    }],
    "post-processors": [{
        "type": "vagrant",
        "compression_level": 9,
        "output": "../../../boxes/{{.Provider}}/{{ user `vm_name` }}.box"
    }]
}
