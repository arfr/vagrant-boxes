{
    "variables": {
        "vm_name": "ubuntu-14.04-amd64",
        "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.3-server-amd64.iso",
        "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb"
    },
    "builders": [{
        "vm_name": "{{ user `vm_name` }}",
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",

        "headless": false,
        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
        "virtualbox_version_file": ".vbox_version",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "512"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ],

        "disk_size": 10240,

        "iso_url": "{{ user `iso_url` }}",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_checksum_type": "sha256",

        "http_directory": "http",

        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "ssh_wait_timeout": "10000s",

        "boot_command": [
            "<esc><esc><enter><wait>",
            "install auto=true priority=critical preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
            "<enter>"
        ],

        "shutdown_command": "echo 'vagrant' | sudo shutdown -h now"
    }],
    "provisioners": [{
        "type": "shell",
        "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
        "scripts": [
            "scripts/base.sh",
            "scripts/puppet.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/grub.sh",
            "scripts/cleanup.sh"
        ]
    }],
    "post-processors": [{
        "type": "vagrant",
        "compression_level": 9,
        "output": "../../../boxes/{{.Provider}}/{{ user `vm_name` }}.box"
    }]
}
